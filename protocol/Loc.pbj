"pbj-0.0.3"

package CBR.Protocol.Loc;

message TimedMotionVector {
    required time t = 1;
    required vector3f position = 2;
    required vector3f velocity = 3;
}

message LocationUpdate {
    required uuid object = 1;
    required TimedMotionVector location = 2;
    required boundingsphere3f bounds = 3;
}

message BulkLocationUpdate {
    repeated LocationUpdate update = 1;
}


// Payload for request from an object to space to update its location.
// This should be sent from object -> Space(Loc) in an
// ObjectMessage.
message LocationUpdateRequest {
    optional TimedMotionVector location = 1;
    optional boundingsphere3f bounds = 2;
}

message Container {
    optional LocationUpdateRequest update_request = 1;
}